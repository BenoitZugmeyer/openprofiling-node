{
  "name": "@openprofiling/nodejs",
  "version": "0.0.1",
  "main": "build/index.js",
  "types": "build/index.d.ts",
  "repository": "openprofiling/openprofiling-node",
  "scripts": {
    "build": "tsc -p tsconfig.json",
    "lint": "tslint --project . src/**/*.ts",
    "test": "mocha -r ts-node/register ./test/*.spec.ts",
    "test-coverage": "nyc mocha -r ts-node/register test/*.spec.ts",
    "report-coverage": "nyc report --reporter=json && codecov -f coverage/*.json",
    "ci": "yarn test-coverage && yarn report-coverage",
    "prepublishOnly": "yarn build"
  },
  "keywords": [
    "openprofiling",
    "nodejs",
    "tracing",
    "profiling"
  ],
  "author": "Valentin Marchaud",
  "license": "Apache-2.0",
  "engines": {
    "node": ">=6.0"
  },
  "files": [
    "build/src/**/*.js",
    "build/src/**/*.d.ts",
    "doc",
    "CHANGELOG.md",
    "LICENSE",
    "README.md"
  ],
  "publishConfig": {
    "access": "public"
  },
  "nyc": {
    "extension": [
      ".ts"
    ],
    "exclude": [
      "build/",
      "config/",
      "examples/",
      "test/"
    ],
    "cache": true,
    "all": true
  },
  "dependencies": {
    "@openprofiling/core": "^0.0.1"
  },
  "devDependencies": {
    "@types/mocha": "^5.2.5",
    "@types/node": "^11.9.5",
    "codecov": "^3.4.0",
    "mocha": "^5.0.4",
    "nyc": "13.1.0",
    "ts-node": "^7.0.1",
    "tslint": "^5.13.0",
    "tslint-config-standard": "^8.0.1",
    "typescript": "^3.3.3"
  }
}
